<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:gravity="center_horizontal"
              android:orientation="horizontal"
              tools:background="@color/darkGray"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
    >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/ivTextNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_teal"
            android:src="@drawable/ic_text_note"
            android:padding="10dp"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/ivMic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_blue"
            android:src="@drawable/ic_mic"
            android:padding="10dp"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/ivVideoCam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_light_green"
            android:src="@drawable/ic_videocam"
            android:padding="10dp"
            android:clickable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        >
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_light_gray"
            android:src="@drawable/ic_close"
            android:padding="7dp"
            android:clickable="true"
            />
    </RelativeLayout>


</LinearLayout>